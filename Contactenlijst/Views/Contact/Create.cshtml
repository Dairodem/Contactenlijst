@model ContactCreateViewModel


<form asp-controller="Contact" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Surname">Naam:</label>
        <input class="form-control" asp-for="Surname" />
        <span class="text-danger" asp-validation-for="Surname"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name">Voornaam:</label>
        <input class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="BirthDate">Geboortedatum:</label>
        <input class="form-control" asp-for="BirthDate" />
        <span class="text-danger" asp-validation-for="BirthDate"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email:</label>
        <input class="form-control" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="TelNr">Telefoonnummer:</label>
        <input class="form-control" asp-for="TelNr" />
        <span class="text-danger" asp-validation-for="TelNr"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address">Adres:</label>
        <input class="form-control" asp-for="Address" />
        <span class="text-danger" asp-validation-for="Address"></span>
    </div>
    <div class="form-group">
        <label asp-for="Annotation">Beschrijving:</label>
        <input class="form-control" asp-for="Annotation" />
        <span class="text-danger" asp-validation-for="Annotation"></span>
    </div>
    <div class="form-group">
        <label asp-for="Photo">foto:</label>
        <input class="form-control" asp-for="Photo" />
        <span class="text-danger" asp-validation-for="Photo"></span>
    </div>

    <button class="btn btn-primary" type="submit">Bevestig</button>

</form>
@model ContactEditViewModel

<form asp-controller="Contact" asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="Surname">Naam:</label>
        <input class="form-control" asp-for="Surname" value="@Model.Surname"/>
        <span class="text-danger" asp-validation-for="Surname"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name">Voornaam:</label>
        <input class="form-control" asp-for="Name"  value="@Model.Name"/>
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="BirthDate">Geboortedatum:</label>
        <input class="form-control" asp-for="BirthDate" value="@Model.BirthDate" />
        <span class="text-danger" asp-validation-for="BirthDate"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email:</label>
        <input class="form-control" asp-for="Email" value="@Model.Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="TelNr">Telefoonnummer:</label>
        <input class="form-control" asp-for="TelNr" value="@Model.TelNr" />
        <span class="text-danger" asp-validation-for="TelNr"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address">Adres:</label>
        <input class="form-control" asp-for="Address" value="@Model.Address" />
        <span class="text-danger" asp-validation-for="Address"></span>
    </div>
    <div class="form-group">
        <label asp-for="Annotation">Beschrijving:</label>
        <input class="form-control" asp-for="Annotation" value="@Model.Annotation" />
        <span class="text-danger" asp-validation-for="Annotation"></span>
    </div>

    <button class="btn btn-success" type="submit">Bevestig</button>

</form>